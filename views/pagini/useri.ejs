<!DOCTYPE html>
<html lang="en">

<head>
    <title>Useri</title>
    <%- include("../../fragmente/head") %>
        <script type="text/javascript" src=/resurse/js/produse.js></script>
</head>

<body>
    <%- include("../../fragmente/header") %>

        <main>
            <div class="afisaj">
                <h2>Useri</h2>

                <table id="useri">
                    <tr>
                        <th>id</th>
                        <th>Username</th>
                        <th>Nume</th>
                        <th>Prenume</th>
                        <th>Data</th>
                        <th>Rol</th>
                        <th></th>
                    </tr>
                    <% for (var i = 0; i < useri.length; i++) { %>
                        <tr>
                            <td>
                                <%= useri[i].id %>
                            </td>
                            <td>
                                <%= useri[i].username %>
                            </td>
                            <td>
                                <%= useri[i].nume %>
                            </td>
                            <td>
                                <%= useri[i].email %>
                            </td>
                            <%  
					d=new Date(useri[i].data_adaugare)
					sir_data=`${d.getDate()}/${d.getMonth()}/${d.getFullYear()} ${d.getHours()}:${d.getMinutes()}:${d.getSeconds()}`
				  %>
                                <td>
                                    <%=  sir_data %>
                                </td>
                                <td>
                                    <%=  useri[i].rol %>
                                </td>
                                <td>
                                    <form method="post" class="date" action="/promote" enctype="multipart/form-data">
                                        <label>
                            <input type="text" name="id" value="<%= useri[i].id%>" hidden>
                        </label>
                                        <label>
                            <input type="text" name="rol" value="<%= useri[i].rol%>" hidden>
                        </label>
                                        <label>
                            <input type="text" name="email" value="<%= useri[i].email%>" hidden>
                        </label>
                                        <input type="submit" value="Promote/demote">
                                    </form>
                                    <% if (locals.mesaj) %>
                                        <%= locals.mesaj %>

                                </td>
                        </tr>

                        <% } %>
                </table>

                <p>Sterge utilizator</p>
                <form id="sterge" method="post" action="/sterge_utiliz">
                    <label>
				Id: <input type="text" name="id_utiliz" value="" />
			</label>

                    <input type="submit" value="Submit" />
                </form>
            </div>
        </main>


        <%- include("../../fragmente/footer") %>

</body>

</html>