<form id="form_inreg" method="post" class="date" action="<%= locals.action %>" enctype="multipart/form-data">
    <p>
        <label>
            Username: <input type="text" name="username" id="inp-username" value="prof<%= Math.floor(Math.random()*100000) %>" pattern="[A-Za-z0-9]+" required autocomplete="off">
        </label>
    </p>
    <p>
        <label>
            Last name: <input type="text" name="nume" id="inp-nume"  value="Sanchez" pattern="[A-Za-z]+" required>
        </label>
    </p>
    <p>
        <label>
            First name: <input type="text" name="prenume" id="inp-prenume" value="Pedro"  pattern="[A-Za-z]+" required>
        </label>
    </p>
    <p>
        <label>
            Password: <input id="parl" type="password" required  name="parola" value="1234" required>
        </label>
    </p>
    <p id="p-reintrod">
        <label>
            Confirm password: <input id="rparl" required type="password" name="rparola" value="1234" required> 
        </label>
    </p>
    <p>
        <label>
            Email: <input type="text" name="email" id="inp-email" value="profprofprof007@gmail.com"  size="50" required>
        </label>
    </p>
    <p>
        <label>
            Text chat color: <select name="culoare_chat" id="sel-culoare"><option value="red" selected>rosu</option><option value="green">verde</option><option value="blue">albastru</option></select>
        </label>
    </p>
    <p>
        <label>
            Profile picture: <input type="file" id="profilepic" name="poza" accept="image/*">
        </label>
    </p>
    <p>
        <label>
            Phone number: <input type="text" id="phonenumber" name="phone" value="+000000000000" pattern="\+?0[0-9]{10,}">
        </label>
    </p>
    <p>
        <input type="submit" name="mod" value="Send">
        <input type="reset" value="Reseteaza">
        <% if(locals.utilizator) {%>

            <label>
                    <input type="text" name="id" value="<%=locals.utilizator.id%>" hidden>
                </label>
            <input type="submit" name="mod" value="Delete">
            <%}%>
    </p>
</form>